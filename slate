config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf windowSize
config windowHintsIgnoreHiddenWindows false
config windowHintsSpread true
config windowHintsShowIcons true
config windowHintsDuration 10

# shrink bindings
bind right:cmd;ctrl   resize -50% +0 bottom-right
bind left:cmd;ctrl    resize -50% +0 bottom-left
bind up:cmd;ctrl      resize +0 -50% top-left
bind down:cmd;ctrl    resize +0 -50% bottom-right
bind right:shift;cmd;ctrl   resize -25% +0 bottom-right
bind left:shift;cmd;ctrl    resize -25% +0 bottom-left
bind up:shift;cmd;ctrl      resize +0 -25% top-left
bind down:shift;cmd;ctrl    resize +0 -25% bottom-right

# grow bindings
bind right:alt;cmd;ctrl   resize +100% +0 bottom-left
bind left:alt;cmd;ctrl    resize +100% +0 top-right
bind up:alt;cmd;ctrl      resize +0 +100% bottom-left
bind down:alt;cmd;ctrl    resize +0 +100% top-right
bind right:shift;alt;cmd;ctrl   resize +50% +0 bottom-left
bind left:shift;alt;cmd;ctrl    resize +50% +0 top-right
bind up:shift;alt;cmd;ctrl      resize +0 +50% bottom-left
bind down:shift;alt;cmd;ctrl    resize +0 +50% top-right

# max/half/whatever bindings
bind right:ctrl;alt   push right bar-resize:screenSizeX/2
bind left:ctrl;alt    push left  bar-resize:screenSizeX/2
bind up:ctrl;alt      move screenOriginX;screenOriginY screenSizeX;screenSizeY

# Throw Bindings
bind 1:ctrl;alt         throw 0 resize
bind 2:ctrl;alt         throw 1 resize
bind 3:ctrl;alt         throw 2 resize

# Window Hints
bind esc:cmd hint ASDFJKLGHWERTYUIOXCVM

# Relaunch!
bind esc:cmd;ctrl;alt;shift relaunch

# MPD Commands
bind f7:cmd shell "/usr/local/bin/ncmpcpp prev"
bind f8:cmd shell "/usr/local/bin/ncmpcpp toggle"
bind f9:cmd shell "/usr/local/bin/ncmpcpp next"
